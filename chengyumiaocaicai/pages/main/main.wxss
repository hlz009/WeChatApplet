.title{
  text-align:center;
  width:100%;
  height:10rpx;
}
.content-first{
  text-align:center;
  padding-top:80rpx;
  margin:60rpx;
  border: 8rpx solid #cc6;
  border-radius: 60rpx;
  background: radial-gradient(circle, #FFF,rgba(204,204,102,0.5));
  margin-bottom:10rpx;
}
.view_img{
  text-align:center;
  padding:20rpx;
}
.img_box{
  width:300rpx;
  height:300rpx;
  margin:0 auto;
  border:5rpx solid #CD853F;
  border-radius:15rpx;
}
.view_button{
  height:80rpx;
}
.base_button{
  width:135rpx;
  float:left;
  padding:5rpx 20rpx;
}
.tips_button{
  margin-left:25px;
}
.button_fontsize_25{
  font-size:25rpx 
}
button{
  color:#fff;
}
.view_text{
  display: flex;
  align-items: center;
  margin:0 200rpx;
}
.text_input{
  border: 2px solid #F5F5DC;
  width:60rpx;
  height:60rpx;
  border-radius:10rpx;
  margin:0 10rpx;
  background-color:#ddd;
  text-align:center;
}
.view_answeroption{
  text-align:center;
  align-items: center;
  width:700rpx;
  padding:0 30rpx;
  margin:20rpx 0;
}

.text_option{
  margin:6rpx;
  float:left;
  border:2px solid #F5F5DC;
  background-color:rgba(204,204,102,0.3);  
}
.cancel_text_option{
  border: 2px solid #FFF;
  width:60rpx;
  height:60rpx;
  border-radius:10rpx;
  margin:6rpx;
  float:left
}
